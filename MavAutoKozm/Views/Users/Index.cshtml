<link rel=" stylesheet " href="~/css/foOldal.css" asp-append-version="true" />
@model IEnumerable<MavAutoKozm.Models.AppUser>

@{
    ViewData["Title"] = "Felhasználók";
}

<h1>Index</h1>

@if(!Model.Any()){
    <h1>Ön még nem rendelkezik felhasználói adatokkal!</h1>
    <p>
        <a asp-action="Create">Létrehozás</a>
    </p>
}
else
{

    <table class="table" aria-hidden="true">
        <thead>
            <tr>
                <th>
                    @MavAutoKozm.Resources.Resource.Keresztnév
                </th>
                <th>
                    @MavAutoKozm.Resources.Resource.Vezetéknév
                </th>
                <th>
                    @MavAutoKozm.Resources.Resource.Email
                </th>
                <th>
                    @MavAutoKozm.Resources.Resource.Telefonszám
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUserId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUserId)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">@MavAutoKozm.Resources.Resource.Szerkesztés</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">@MavAutoKozm.Resources.Resource.Részletek</a> |
                        <a style="color:red" asp-action="Delete" asp-route-id="@item.ID">@MavAutoKozm.Resources.Resource.Törlés</a>
                </td>
            </tr>
    }
        </tbody>
    </table>

}