@model MavAutoKozm.Models.AppUser
<link rel=" stylesheet " href="~/css/foOldal.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Szerkesztés";
}

<img src="~/css/image/3cf626720ae64fb5a5b5d9eab9e8c185.png" alt="LOGO" style="float:right;width:90px;height:90px;" />
<h1>@MavAutoKozm.Resources.Resource.Szerkesztés</h1>


<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="LastName" class="control-label">@MavAutoKozm.Resources.Resource.Keresztnév</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label">@MavAutoKozm.Resources.Resource.Vezetéknév</label>
                <input asp-for="FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@MavAutoKozm.Resources.Resource.Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">@MavAutoKozm.Resources.Resource.Telefonszám </label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="AspNetUserId" class="control-label"></!--label> -->
                <input asp-for="AspNetUserId" class="form-control" />
                <span asp-validation-for="AspNetUserId" class="text-danger"></span>
            </div>

            <table aria-hidden="true">
                <tr>
                    <td>
                        <p></p>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a style="margin-right:30px;" class="foOldalGombja nav-link text-dark" asp-area="" asp-controller="Vehicles" asp-action="Index">@MavAutoKozm.Resources.Resource.Járművek</a>
                            </div>
                        }
                        else
                        {
                            <div>
                                <a style="margin-right:30px;" class="foOldalGombja nav-link text-dark" asp-area="" asp-controller="Vehicles" asp-action="Index">@MavAutoKozm.Resources.Resource.Járműveim</a>
                            </div>
                        }
                        
                    </td>
                    <td>
                            @if (User.IsInRole("Admin"))
                        {
                            <p></p>
                            <a class="Gomb nav-link text-dark" style="width: 180px" asp-area="" asp-controller="Users" asp-action="ChangeRole" asp-route-appuserid="@Model.ID">Alkalmazottá alakítás</a>
                        }
                    </td>
                    <td>
                        <p></p>
                        <div style="margin-right:30px;" class="foOldalGombja nav-link text-dark">
                            <input type="submit" class="foOldalGombja nav-link text-dark" value="@MavAutoKozm.Resources.Resource.Mentés" @* style="background-color:#add8e6; color:black; padding: 5px 20px; text-align: center;
                                text-decoration: none; display: inline-block; border-radius: 5px; border: 1px solid black; width: 130px; font-size: 14px; 
                                margin-bottom: 1%"*@/>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<p></p>
<div>
    <a style="margin-right:30px;" class="foOldalGombja nav-link text-dark" asp-action="Index">@MavAutoKozm.Resources.Resource.Vissza_a_listába</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
