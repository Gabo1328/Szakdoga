@model MavAutoKozm.Models.AppUser

@{
    ViewData["Title"] = "Create";
}

<h1>Adatok megadása</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">@MavAutoKozm.Resources.Resource.Vezetéknév</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label">@MavAutoKozm.Resources.Resource.Keresztnév</label>
                <input asp-for="FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@MavAutoKozm.Resources.Resource.Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">@MavAutoKozm.Resources.Resource.Telefonszám</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="AspNetUserId" class="control-label"></!--label> -->
                <input asp-for="AspNetUserId" class="form-control" />
                <span asp-validation-for="AspNetUserId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="@MavAutoKozm.Resources.Resource.Mentés" class="btn btn-primary" style="background-color:#add8e6; color:black; padding: 5px 20px; text-align: center;
                    text-decoration: none; display: inline-block; border-radius: 5px; border: 1px solid black; width: 20%; font-size: 14px;
                    margin-bottom: 1%" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-action="Index">@MavAutoKozm.Resources.Resource.Vissza_a_listába</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
