@model MavAutoKozm.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>@MavAutoKozm.Resources.Resource.Jármű_hozzáadás</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!-- <label asp-for="AppUserId" class="control-label"></label> -->
                <!-- <select asp-for="AppUserId" class ="form-control" asp-items="ViewBag.AppUserId"></select> -->
                <input asp-for="AppUserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">@MavAutoKozm.Resources.Resource.Márka</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">@MavAutoKozm.Resources.Resource.Modell</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">@MavAutoKozm.Resources.Resource.Típus</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">@MavAutoKozm.Resources.Resource.Szín</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPlate" class="control-label">@MavAutoKozm.Resources.Resource.Rendszám</label>
                <input asp-for="NumberPlate" class="form-control" />
                <span asp-validation-for="NumberPlate" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="@MavAutoKozm.Resources.Resource.Mentés" class="btn btn-primary" style="background-color:#add8e6; color:black; padding: 5px 20px; text-align: center;
                    text-decoration: none; display: inline-block; border-radius: 5px; border: 1px solid black; width: 130px; font-size: 14px;
                    margin-bottom: 1%" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@MavAutoKozm.Resources.Resource.Vissza_a_listába</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
