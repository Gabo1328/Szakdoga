@model MavAutoKozm.Models.Orders

@{
    ViewData["Title"] = "Rendelés részletei";
}

<h1>Rendelés részletei</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppUserId)
        </dd>
        <dt class = "col-sm-2">
            Rendszám
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.VehicleId)*@
            @ViewData["VehicleNumberPlate"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
         <dd class="col-sm-10">
            @if (Model.Category == 0) {<div>Személyautó</div> }
            else if( Model.Category == 1) {<div>Teherautó</div> }
            else if( Model.Category == 2) {<div>Kamion</div> }
            else {<div>Motor</div> }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Outer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Outer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Polish)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Polish)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wax)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wax)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ceramic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ceramic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ppf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ppf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quality)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quality)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @{
                var Price = String.Format("{0:C0}", Model.Price);
            }
            <div>@Price</div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompletedTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompletedTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Progress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Progress)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Megrendelesek">Vissza a Megrendelésekhez</a>
</div>
