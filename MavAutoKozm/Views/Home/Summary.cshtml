        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedServices.Ppf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedServices.Category)
        </dt>
        <dd class="col-sm-10">
            @if (Model.SelectedServices.Category == 0) {<div>Személyautó</div> }
            else if( Model.SelectedServices.Category == 1) {<div>Teherautó</div> }
            else if( Model.SelectedServices.Category == 2) {<div>Kamion</div> }
            else {<div>Motor</div> }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedServices.Quality)
        </dt>
        <dd class="col-sm-10">
            @if (Model.SelectedServices.Quality == 0) {<div>Alap</div> }
            else if( Model.SelectedServices.Quality == 1) {<div>Legjobb választás</div> }
            else {<div>Prémium</div> }
        </dd>
