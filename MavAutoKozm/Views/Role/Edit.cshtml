                <th>
                    @Html.DisplayNameFor(model => model.list[0].Member)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.list) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>

                    <input class="form-check-input" asp-for="@item.Member" disabled/>

                </td>
                <td>
                </td>
            </tr>
        }
        </tbody>
    </table>
