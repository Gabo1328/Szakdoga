@model MavAutoKozm.Models.UserInRoleList

@{
    ViewData["Title"] = "Részletek";
}

<h1>@ViewData["RoleName"]</h1>

 <form asp-action="Edit">
    <table class="table" aria-hidden="true">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.list[0].Name)
                </th>
