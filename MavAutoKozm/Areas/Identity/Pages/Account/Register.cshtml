@page
@model RegisterModel
@{
    //ViewData["Title"] = "Regisztráció";
}
<link rel="stylesheet" href="~/css/register.css" />
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    @*<p>
        <img src="~/css/image/3cf626720ae64fb5a5b5d9eab9e8c185.png" alt="LOGO" />
    </p>*@
</div>

<div class="container">
    <div class="form_area">
   
            <img src="~/css/image/3cf626720ae64fb5a5b5d9eab9e8c185.png" alt="LOGO" height="100px" width="100px"/>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<h2>Create a new account.</h2>*@
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form_group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            
                <div class="form_group">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                </div>
            
            
                <div class="form_group">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                </div>
            
            
            <button class="btn"
                    id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                @MavAutoKozm.Resources.Resource.Regisztráció
            </button>
            @*<p>Van már profilja? <a class="link" href="">Bejelentkezés!</a>*@
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
